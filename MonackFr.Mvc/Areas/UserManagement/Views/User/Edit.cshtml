<div class="module-content">
    <form ng-submit="editUserCtrl.edit()">
        <ul>
            <li>
                <label>Username</label>
                <input type="text" ng-model="editUserCtrl.user.UserName" />
            </li>
            <li>
                <label>Password</label>
                <input type="password" ng-model="editUserCtrl.user.Password" />
            </li>
            <li>
                <label>Email</label>
                <input type="email" ng-model="editUserCtrl.user.Email" />
            </li>
            <li>
                <label>Groups</label>
                <ul>
                    <li ng-repeat="group in editUserCtrl.user.Groups">
                        <input type="checkbox"
                               name="selectedGroups[]"
                               value="{{group.Name}}"
                               ng-model="group.Selected"> {{group.Name}}
                    </li>
                </ul>
            </li>
            <li>
                <input type="submit" name="submit" value="Save user" />
            </li>
        </ul>
    </form>
</div>