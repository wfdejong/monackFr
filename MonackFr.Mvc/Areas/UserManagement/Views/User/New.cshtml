<div class="module-content">
    <form ng-submit="newUserCtrl.add()">
        <ul>
            <li>
                <label>Username</label>
                <input type="text" ng-model="newUserCtrl.user.UserName" />
            </li>
            <li>
                <label>Password</label>
                <input type="password" ng-model="newUserCtrl.user.Password" />
            </li>
            <li>
                <label>Email</label>
                <input type="email" ng-model="newUserCtrl.user.Email" />
            </li>
            <li>
                <input type="submit" name="submit" value="Add user" />
            </li>
        </ul>
    </form>
</div>